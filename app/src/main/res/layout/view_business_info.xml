<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_regular"
        android:paddingStart="@dimen/margin_regular"
        android:paddingEnd="@dimen/margin_regular"
        android:background="?android:attr/selectableItemBackground">

    <TextView
            android:id="@+id/infoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_call"
            android:drawablePadding="@dimen/margin_small"
            android:ellipsize="end"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/black"
            tools:text="Call"/>

    <ImageView
            android:src="@drawable/ic_right_arrow"
            android:layout_width="@dimen/contact_icon_size"
            android:layout_height="@dimen/contact_icon_size"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>

    <View style="@style/ViewSpacer"
          android:layout_below="@id/infoTextView"/>

</RelativeLayout>